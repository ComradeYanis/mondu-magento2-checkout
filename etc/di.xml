<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="Mondu\Mondu\Helper\AdditionalCosts\AdditionalCostsInterface"
                type="Mondu\Mondu\Helper\AdditionalCosts\AdditionalCosts"/>
    <preference for="Mondu\Mondu\Helper\BuyerParams\BuyerParamsInterface"
                type="Mondu\Mondu\Helper\BuyerParams\BuyerParams"/>

    <type name="Mondu\Mondu\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Mondu\Mondu\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">MONDU</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Mondu\Mondu\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="log_listing_data_source_mondu"
                      xsi:type="string">Mondu\Mondu\Model\ResourceModel\Log\Grid\Collection
                </item>
            </argument>
        </arguments>
    </type>
    <virtualType name="Mondu\Mondu\Model\ResourceModel\Log\Grid\Collection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">mondu_transactions</argument>
            <argument name="resourceModel" xsi:type="string">Mondu\Mondu\Model\ResourceModel\Log</argument>
        </arguments>
    </virtualType>

    <type name="Magento\Payment\Helper\Data">
        <plugin sortOrder="10" name="monduPaymentData" type="Mondu\Mondu\Plugin\DataPlugin"/>
    </type>
    <type name="Magento\Framework\App\Request\CsrfValidator">
        <plugin name="csrf_validator_skip" type="Mondu\Mondu\Helper\CsrfValidatorSkip"/>
    </type>
    <type name="Mondu\Mondu\Observer\AbstractMonduObserver">
        <arguments>
            <argument name="logger" xsi:type="object">Mondu\Mondu\Logger\Logger</argument>
        </arguments>
    </type>
</config>
